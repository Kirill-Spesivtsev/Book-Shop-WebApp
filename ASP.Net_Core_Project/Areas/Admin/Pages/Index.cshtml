@page
@model ASP.Net_Core_Project.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p class="mt-2 float-right">
    <a asp-page="Create" class="btn btn-info" >
        <span class="fa fa-plus-circle">Добавить</span>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                <img src="~/Images/products/@item.ImageName" alt="NoImage" width="30" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.GenreId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.AuthorId)
            </td>
            <td class="col-1">
                <div class="row">
                    <a asp-page="./Edit" asp-route-id="@item.BookId"
                       class="btn btn-outline-info iconButton">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.BookId"
                       class="btn btn-outline-danger iconButton">
                        <span class="fas fa-trash-alt"></span>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
